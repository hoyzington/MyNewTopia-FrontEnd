{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"xo"
	],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"arrow-parens": [
			"error",
			"as-needed"
		],
		"object-curly-spacing": "off",
		"quote-props": [
			"error",
			"consistent"
		],
		"padding-line-between-statements": 0,
		"one-var": 0,
		"indent": [
			"error",
			"tab",
			{ "VariableDeclarator": {
					"var": 2,
					"let": 2,
					"const": 3
				},
				"SwitchCase": 1
			}
		]
	}
}
