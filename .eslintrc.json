{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"xo"
	],
	"parserOptions": {
		"sourceType": "script",
		"ecmaVersion": "latest"
	},
  "rules": {
    "arrow-parens": [
      "error",
      "as-needed"
    ],
		"object-curly-spacing": "off",
		"quote-props": [
			"error",
			"consistent"
		],
		"padding-line-between-statements": 0,
		"one-var": 0,
		"indent": [
			"error",
			"tab",
			{ "VariableDeclarator": {
					"var": 2,
					"let": 2,
					"const": 3
				},
				"SwitchCase": 1
			}
		],
		"no-unused-vars": 0
	}
}
